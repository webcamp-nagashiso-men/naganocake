<h2>注文履歴詳細</h2>

  <table class="table">
    <tr>
    <th>購入者</th>
    <th><%= @order.end_user.name_last %><%= @order.end_user.name_first %></th>
    </tr>

    <tr>
    <th>注文日</th>
    <th><%= @order.created_at.strftime('%Y/%m/%d') %></th>
    </tr>

    <tr>
    <th>配送先</th>
    <th><%= @order.postal_code %></th>
    <th><%= @order.address%></th>
    <th><%= @order.name%></th>
    </tr>

    <tr>
    <th>支払方法</th>
    <th><%= @order.payment_method%></th>
    </tr>

  <%= form_with model: @order, url: admin_order_path, local:true do |f| %>
    <tr>
      <th>注文ステータス</th>
      <th><%= select :order, :order_status, Order.order_statuses.keys.to_a, include_blank: true %></th>
      <th><%= f.submit "更新", class: "btn btn-success btn-sm" %></th>
    </tr>
  </table>
  <% end %>

  <div class="col-md-8 offset-md-1">
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込み）</th>
          <th>数量</th>
          <th>小計</th>
          <th>制作ステータス</th>
        </tr>
      </thead>
       <% @order_products.each do |order_product| %>
      <tbody>
       <tr>
        <td><%= order_product.product.name %></td>
        <td><%= tax_price(order_product.product.unit_price).to_s(:delimited) %>/td>
        <td><%= order_products.quantity%></td>
        <td><%= sub_total(order_product).to_s(:delimited) %></td>
        <th><%= select :order, :order_products, Order.order_products.keys.to_a, include_blank: true %></th>
       </tr>
      </tbody>
      <% end %>
      </table>

       <div class="col-md-3">
      <div class="row" style="margin-top: 50px;">
        <div class="col-md-12"></div>
      </div>
      <div class="row">
        <div class="col-md-7 text-left">
          <p class="font-weight-bold">商品合計</p>
        </div>
        <div class="col-md-5 text-right">
          <% @item_total = total_price(@order_products) - @order.postage %>
          <%= @item_total %>円
        </div>
      </div>
      <div class="row">
        <div class="col-md-7 text-left">
          <p class="font-weight-bold">送料</p>
        </div>
        <div class="col-md-5 text-right">
          <%= @order.postage %>円
        </div>
      </div>
      <div class="row">
        <div class="col-md-7 text-left">
          <p class="font-weight-bold">請求金額合計</p>
        </div>
        <div class="col-md-5 text-right">
          <%= total_price(@order_products).to_s(:delimited) %> 円
        </div>
      </div>
    </div>


    </div>

