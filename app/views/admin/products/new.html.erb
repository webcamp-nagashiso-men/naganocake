<h2><span class="badge badge-light">商品新規登録</span></h2>
  <% if @product.errors.any? %>
    <%= @product.errors.count %>件のエラーが発生しました
    <% @product.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <%= form_for (@product), url: admin_products_path, local:true do |f| %>
  <table class="mx-auto">
    <tr>
    <th><h6>商品画像</h6></th>
    <th><%= f.attachment_field :image %></th>
    </tr>
    
    <tr>
    <th><h6>商品名</h6></th>
    <th><%= f.text_field :name %></th>
    </tr>
    
    <tr>
    <th><h6>商品説明</h6></th>
    <th><%= f.text_area :guide %></th>
    </tr>
    
    <tr>
    <th><h6>ジャンル</h6></th>
    </tr>
    
    <tr>
    <th><h6>税抜価格</h6></th>
    <th><%= f.text_field :price %>円</th>
    </tr>
    
    <tr>
    <th><h6>販売ステータス</h6></th>
    <!--<th><%#= f.select :is_active %></th>-->
    <th><%= f.select :is_active, [["販売中","false"], ["販売停止中","true"]], include_blank: "--選択してください--" %></th>
    </tr>
  
    <td><div><%= f.submit "新規登録", class: "btn btn-success" %></div></td>
    
  <% end %>
  </table>
  
  