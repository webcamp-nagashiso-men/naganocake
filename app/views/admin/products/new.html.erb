<h4>商品新規登録</h4>
  <%= form_for (@product), url: admin_products_path, local:true do |f| %>
  <table>
    <tr>
    <th><h4>商品画像</h4></th>
    <th><%= f.attachment_field :image %></th>
    </tr>
    
    <tr>
    <th><h4>商品名</h4></th>
    <th><%= f.text_field :name %></th>
    </tr>
    
    <tr>
    <th><h4>商品説明</h4></th>
    <th><%= f.text_area :guide %></th>
    </tr>
    
    <tr>
    <th><h4>ジャンル</h4></th>
    </tr>
    
    <tr>
    <th><h4>税抜価格</h4></th>
    <th><%= f.text_field :price %></th>
    </tr>
    
    <tr>
    <th><h4>販売ステータス</h4></th>
    <!--<th><%#= f.select :is_active %></th>-->
    </tr>
  </table>
    
    <div><%= f.submit "新規登録", class: "btn btn-success" %></div>
    
  <% end %>
  
  