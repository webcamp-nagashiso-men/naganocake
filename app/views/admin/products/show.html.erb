<div class="container">
  <h2><div class="badge badge-light">商品詳細</div></h2>
  
    <div class ="row">
      <div class="col-lg-5">
        <%= attachment_image_tag(@product, :image, size: "370x250") %>
      </div>

      <div class="col-lg-5">
        <table class="mx-auto">
          <tr>
            <th>商品名</th>
            <th><%= @product.name %></th>
          </tr>
          
          <tr>
            <th>商品説明</th>
            <th><%= @product.guide %></th>
          </tr>
          
          <tr>
            <th>ジャンル</th>
            <th><%= @product.genre.name %></th>
          </tr>
        
          <tr>
            <th>税込価格<br>(税抜価格)</th>
            <th><%= @product.add_tax_price.to_s(:dalimited) %></th>
            <th>(<%= @product.price %>)円</th>
          </tr>
        
          <tr>
            <th>販売ステータス</th>
            <th>
              <% if @product.is_active %>
                <span style="color:green">販売中</span>
              <% else %>
                <span style="color:gray">販売停止中</span>
              <% end %>
            </th>
          </tr>
      </div>
          <tr>
            <th>
              <br>  
              <div class="text-center">
                <%= link_to "編集する", edit_admin_product_path(@product.id), class: "btn btn-sm btn-success" %>
              </div>
            </th>      
          </tr>
        </table>
    </div>
</div>  