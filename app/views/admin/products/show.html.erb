<h2><span class="badge badge-light">商品詳細</span></h2>
  <div class="container">
    <div class ="row justify-content-center">
      <dvi class="col-lg-4">
        <%= attachment_image_tag(@product, :image, size: "370x250") %>
      </dvi>

      <div class="col-lg-8">
        <table class="mx-auto">
          <tr>
            <th>商品名</th>
            <th><%= @product.name %></th>
          </tr>
          
          <tr>
            <th>商品説明</th>
            <th><%= @product.guide %></th>
          </tr>
          
          <tr>
            <th>ジャンル</th>
            <th><%= @product.genre.name %></th>
          </tr>
        
          <tr>
            <th>税込価格<br>(税抜価格)</th>
            <th><%= @product.add_tax_price.to_s(:dalimited) %></th>
            <th>(<%= @product.price %>)円</th>
          </tr>
        
          <tr>
            <th>販売ステータス</th>
            <th>
              <% if @product.is_active %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </th>
          </tr>
        </tabel>
      </div>

      <tr>
        <th>
        <br>  
        <div class="text-center">
          <%= link_to "編集する", edit_admin_product_path(@product.id), class: "btn btn-sm btn-success" %>
        </div>
        </th>      
      </tr>        
    </div>
  </div>  