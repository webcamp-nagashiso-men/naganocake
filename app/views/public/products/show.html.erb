<div class="container">
  <div class="row">
    <div>
      <%= attachment_image_tag(@product, :image, size: "300x200" ) %><%# imagesizeは仮 %>
    </div>
      <div>
        <h2><%= @product.name %></h2>
      </div>
      <div>
        <%= @product.guide %>
      </div>
      <div class="field product-price">
        <h3>¥ <%#= @product.add_tax_price.to_s(:delimited) %><%# 商品追加されてから %>
        <%# add_tax_price=models/product.rbで消費税計算 %>
        <span class="tax">(税込)</span>
        </h3>
      </div>
      </div>
      <div class="field">
        <% if @product.is_active == true %>
            <%= form_for(@cart_product , url:"/" , method: :post) do |f| %><%# カートができてから遷移先指定 %>
              <%= f.hidden_field :product_id, value: @product.id %>
              <%= f.select :quantity, options_for_select((1..10).to_a), include_blank: "個数選択" %>
              <%= f.submit "カートに入れる", class: "btn btn-success" %>
            <% end %>
          <% else %>
            <h3>SOLD OUT</h3>
        <% end %>
      </div>
</div>