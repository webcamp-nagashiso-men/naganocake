<div class="container">
  <div class="row">
    <div class="product-contents">
    <table>
      <tbody>
        <tr>
          <td>
            <%= attachment_image_tag(@product, :image, size: "300x200" ) %>
          </td>
          <td>
            <h4><strong><%= @product.name %></strong></h4>
            <%= @product.guide %>
            <br>
            <strong>
              ¥ <%= @product.add_tax_price.to_s(:delimited) %>
              <%# add_tax_price=models/product.rbで消費税計算 %>
              (税込)
            </strong>
              <div>
              <% if @product.is_active == true %>
                <%= form_for(@cart_product , url:"/" , method: :post) do |f| %><%# カートができてから遷移先指定 %>
                  <%= f.hidden_field :product_id, value: @product.id %>
                  <%= f.select :quantity, options_for_select((1..10).to_a), include_blank: "個数選択" %>
                  <%= f.submit "カートに入れる", class: "btn btn-success" %>
                  <% end %>
                <% else %>
                  <h4>SOLD OUT</h4>
              <% end %>
              </td>
          </td>
        </tr>
        </div>
      </tbody>
    </table>
  </div>
</div>