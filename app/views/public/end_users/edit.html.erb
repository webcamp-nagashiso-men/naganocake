<div class = " pl-xl-5	">
  <h4 class="text-center m-5 border-bottom p-1">会員情報編集</h4>
  
  <%= form_for @end_user do |f| %>
  <%= render "devise/shared/error_messages", resource: @end_user %>


   <div class = "container">
    <div class="form-horizontal">

    <div class="form-group row">
         <%= f.label :名前 , class: "col-sm-3 col-form-label"%>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">
          <%= f.text_field :name_last, autofocus: true, size: 15%>
          <%= f.text_field :name_first, autofocus: true, size: 15%>
        </div>
       </div>
     </div>

    <div class="form-group row">
       <%= f.label :フリガナ , class: " col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">
          <%= f.text_field :hurigana_last, autofocus: true, size: 15 %>
          <%= f.text_field :hurigana_first, autofocus: true, size: 15 %>
        </div>
      </div>
    </div>

    <div class="form-group row">
        <%= f.label :メールアドレス , class: " col-sm-3 col-form-label" %>
       <div class="col-sm-9">
        <div class = "form-control-plaintext">
          <%= f.email_field :email, autofocus: true, size: 32 %>
        </div>
      </div>
    </div>

    <div class="form-group row">
        <%= f.label :郵便番号（ハイフンなし） , class: " col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">
          <%= f.text_field :postal_code, autofocus: true, size: 8 %>
        </div>
      </div>
    </div>

   <div class="form-group row">
       <%= f.label :住所 , class: " col-sm-3 col-form-label"  %>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">
         <%= f.text_field :address, autofocus: true, size: 32 %>
        </div>
      </div>
   </div>


   <div class="form-group row">
       <%= f.label :電話番号（ハイフンなし） , class: " col-sm-3 col-form-label"  %>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">
         <%= f.text_field :telephone_number, autofocus: true, size: 15 %>
        </div>
      </div>
   </div>

  </div>
 </div>


<div class ="row">
    <div class="col-md-5">
      <%= f.submit "編集内容を保存",  class: "btn btn-success save col-md-8"%>
    </div>
    <div class="col-md-5">
      <%= link_to "退会する",quit_end_user_path(@end_user.id),  class: "btn btn-danger col-md-9"%>
    </div>
</div>
  <% end %>

</div>

 