<h5>配送先登録/一覧</h5>
<%= form_for @shipping_address do |f| %>
<div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code, autofocus: true %>
</div>

<div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true %>
</div>

<div class="field">
    <%= f.label :宛名） %>
    <%= f.text_field :name, autofocus: true %>
</div>

<div class ="row">
 <div class="col-md-5">
    <%= f.submit "新規登録",  class: "btn btn-success save col-md-8"%>
</div>
<% end %>