<h4 class ="text-center m-5 border-bottom p-1">配送先登録</h4>
    <%= form_for @shipping_address do |f| %>

    <div class="form-horizontal">
        <div class="form-group row">
              <%= f.label :郵便番号（ハイフンなし）, class: "col-sm-3 col-form-label"%>
          <div class="col-sm-9">
            <div class = "form-control-plaintext">
              <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000", size: 10  %>
            </div>
          </div>
        </div>

        <div class="form-group row">
            <%= f.label :住所, class: "col-sm-3 col-form-label" %>
          <div class="col-sm-9">
           <div class = "form-control-plaintext">
             <%= f.text_field :address, autofocus: true, placeholder: "東京都新宿区新宿1-2-3", size: 32  %>
           </div>
          </div>
        </div>

        <div class="form-group row">
            <%= f.label :宛名, class: "col-sm-3 col-form-label" %>
          <div class="col-sm-9">
           <div class = "form-control-plaintext">
            <%= f.text_field :name, autofocus: true, placeholder: "流志 奏綿", size: 10 %>
           </div>
          </div>
        </div>

         <div class="col-md-6 text-right">
            <%= f.submit "   新規登録   ",  class: "btn btn-success w-40"%>
        </div>

   </div>
   <% end %>

<h4 class ="text-center m-5 border-bottom p-1">配送先一覧</h4>
<table class='table table-bordered border-dark'>
    <thead>
        <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

    <% @shipping_addresses.each do |shipping_address| %>


        <tr>
            <td><%= shipping_address.postal_code %></td>
            <td><%= shipping_address.address %></td>
            <td><%= shipping_address.name %></td>
            <td><%= link_to "編集する", edit_shipping_address_path(shipping_address), class: "btn btn-outline-primary" %>
                <%= link_to "削除する", shipping_address_path(shipping_address), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-outline-danger" %>
            </td>
        </tr>
    <% end %>
 </tbody>
 </table>
 <%= link_to "マイページへ戻る", end_user_path(current_end_user), class: "btn btn-info order-index-back" %>

