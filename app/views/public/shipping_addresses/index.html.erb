<h4 class ="text-center m-5 border-bottom p-1">配送先登録/一覧</h4>
<%= form_for @shipping_address do |f| %>
<div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code, autofocus: true %>
</div>

<div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true %>
</div>

<div class="field">
    <%= f.label :宛名 %>
    <%= f.text_field :name, autofocus: true %>
</div>

 <div class="col-md-1 text-right">
    <%= f.submit "新規登録",  class: "btn btn-lg btn-success w-60"%>
</div>
<% end %>

<table class='table table-bordered border-dark'>
    <thead>
        <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
        </tr>
    </thead>
    <tbody>  
    
    <% @shipping_addresses.each do |shipping_address| %>
    
     
        <tr>
            <td><%= shipping_address.postal_code %></td>
            <td><%= shipping_address.address %></td>
            <td><%= shipping_address.name %></td>
            <td><%= link_to "編集する", edit_shipping_address_path(shipping_address), class: "btn btn-sm btn-success" %>
                <%= link_to "削除する", shipping_address_path(shipping_address), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
            </td>
        </tr>
    <% end %>
 </tbody>
 </table>