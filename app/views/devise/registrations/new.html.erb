<h4 class = "text-center m-5 border-bottom p-1">新規会員登録</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>



  <div class = " pl-xl-5	">
   <div class = "container">
    <div class="form-horizontal">


    <div class="form-group row">
         <%= f.label :名前 , class: "col-sm-3 col-form-label"%>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">
          <%= f.text_field :name_last, autofocus: true, placeholder: "姓：長野", size: 15%>
          <%= f.text_field :name_first, autofocus: true, placeholder: "名：圭太", size: 15%>
        </div>
       </div>
     </div>

    <div class="form-group row">
       <%= f.label :フリガナ , class: " col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">
          <%= f.text_field :hurigana_last, autofocus: true, placeholder: "セイ：ナガノ", size: 15 %>
          <%= f.text_field :hurigana_first, autofocus: true, placeholder: "メイ：ケイタ", size: 15 %>
        </div>
      </div>
    </div>

    <div class="form-group row">
        <%= f.label :メールアドレス , class: " col-sm-3 col-form-label" %>
       <div class="col-sm-9">
        <div class = "form-control-plaintext">
          <%= f.email_field :email, autofocus: true, placeholder: "cake_@gmail.com", size: 32 %>
        </div>
      </div>
    </div>

    <div class="form-group row">
        <%= f.label :郵便番号（ハイフンなし） , class: " col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">
          <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000", size: 8 %>
        </div>
      </div>
    </div>

   <div class="form-group row">
       <%= f.label :住所 , class: " col-sm-3 col-form-label"  %>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">
         <%= f.text_field :address, autofocus: true, placeholder: "大阪府大阪市北区０−０", size: 32 %>
        </div>
      </div>
   </div>

   <div class="form-group row">
       <%= f.label :電話番号（ハイフンなし） , class: " col-sm-3 col-form-label"  %>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">
         <%= f.text_field :telephone_number, autofocus: true, placeholder: "0000000000", size: 15 %>
        </div>
      </div>
   </div>

   <div class="form-group row">
       <%= f.label :パスワード（６文字以上） , class: " col-sm-3 col-form-label"  %>
       <% if @minimum_password_length %>
       <% end %>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">
         <%= f.password_field :password, autocomplete: "new-password", size: 33%>
        </div>
      </div>
   </div>

   <div class="form-group row">
       <%= f.label :パスワード（確認用） , class: " col-sm-3 col-form-label"  %>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">
         <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 33 %>
        </div>
       </div>
   </div>

  <div class="col-md-12 text-center">
    <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
  </div>

   </div>
  </div>
 </div>


<% end %>


<div class="form-group row">
<h5 class: " col-sm-3 " >すでに登録済みの方</h5>

<p class="col-sm-9">　<%= link_to "こちら",end_user_session_path %>  　からログインしてください。</p>

</div>

</div>