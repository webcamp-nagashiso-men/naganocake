          </li>
          <li class="nav-item">
            <%= link_to "ログアウト", destroy_end_user_session_path, method: :delete, class: 'nav-link  badge badge-pill ' %>
          </li>
          <li class="name-search">
              <h5>商品名検索</h5>
              <%= form_tag(products_path, :method => 'get') do %>
                <%= text_field_tag :word %><br>
                <span class="search-button col-lg-12 text-right">
                  <%= submit_tag "検索" %>
                </span>
              <% end %>
          </li>
         </ul>
